@model SlickTicket.Models.ViewModels.MyTicketsViewModel
@using SlickTicket.Services
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-12">

        @if (User.IsInRole("Administrator") || User.IsInRole("ProjectManager") || User.IsInRole("Developer"))
        {
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Developer Tickets</h3>
                </div>
                <!-- /.card-header -->

                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap" id="devtable">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Created</th>
                                <th>Priority</th>
                                <th>Status</th>
                                <th>View</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Ticket ticket in Model.DevTickets)
                            {
                                <tr>
                                    <td>@ticket.Title</td>
                                    <td>@ticket.Created</td>
                                    <td>@ticket.TicketPriority.Name</td>
                                    <td>@ticket.TicketStatus.Name</td>
                                    <td><a class="btn btn-secondary" asp-action="Details" asp-route-id="@ticket.Id">View</a></td>
                                    <td><a class="btn btn-info" asp-action="Edit" asp-route-id="@ticket.Id">Edit</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        }
        <!-- /.card -->
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">My Submitted Tickets</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap" id="subtickets">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Created</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>View</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Ticket ticket in Model.SubTickets)
                        {
                            <tr>
                                <td>@ticket.Title</td>
                                <td>@ticket.Created</td>
                                <td>@ticket.TicketPriority.Name</td>
                                <td>@ticket.TicketStatus.Name</td>
                                <td><a class="btn btn-secondary" asp-action="Details" asp-route-id="@ticket.Id">View</a></td>
                                <td><a class="btn btn-info" asp-action="Edit" asp-route-id="@ticket.Id">Edit</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#devtickets').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                /*            "info": true,*/
                "autoWidth": false,
                "columnDefs": [{ searchable: false, target: 8 }]
                /*            "responsive": true,*/
            });
        });

        $(document).ready(function () {
            $('#subtickets').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                /*            "info": true,*/
                "autoWidth": false,
                "columnDefs": [{ searchable: false, target: 8 }]
                /*            "responsive": true,*/
            });
        });
    </script>
}

