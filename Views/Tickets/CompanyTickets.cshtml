@model IEnumerable<SlickTicket.Models.Ticket>
@using SlickTicket.Services.Interfaces
@using SlickTicket.Extensions 
@inject IBTCompanyInfoService _infoService
@inject IBTTicketService _ticketService
@inject IBTProjectService _projectService

@{
    ViewData["Title"] = "Index";
}

<h1>Company Tickets</h1>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@Html.DisplayNameFor(model => model.DeveloperUser.Company.Name)</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <!-- Responsive Data Table-->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"></h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="companytickets" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Created</th>
                                <th>Priority</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Add Members</th>
                                <th>Edit</th>
                                <th>See Ticket</th>
                                <th>Assigned to:</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Ticket ticket in Model)
                            {
                            <tr>
                                <td>@ticket.Title</td>
                                <td>@ticket.Description</td>
                                <td>@ticket.Created</td>
                                <td>@ticket.TicketPriority.Name</td>
                                <td>@ticket.TicketType.Name</td>
                                <td>@ticket.TicketStatus.Name</td>
                                <td>
                                    <a class="btn btn-light text-dark" asp-controller="Tickets" asp-action="AssignTicket" asp-route-ticketId="@ticket.Id">Assign</a>
                                </td>
                                <td>
                                    <a class="btn btn-info text-dark" asp-controller="Tickets" asp-action="Edit" asp-route-id="@ticket.Id">Edit</a>
                                </td>
                                <td><a class="btn btn-success text-dark"  asp-controller="Tickets" asp-action="Details" asp-route-id="@ticket.Id">Details</a></td>
                                @*@if(ticket.DeveloperUser.FullName is not null) {
                                <td>@ticket.DeveloperUser.FullName</td>
                                }
                                else
                                {
                                    <td>Unassigned</td>
                                }*@
                            </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Created</th>
                                <th>Priority</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Add Members</th>
                                <th>Edit</th>
                                <th>See Ticket</th>
                                <th>Assigned to:</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>


