@model IEnumerable<SlickTicket.Models.Project>

@{
    ViewData["Title"] = "Details";
}

<h1>My Projects</h1>

<div>
    <hr />

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@Html.DisplayNameFor(model => model.Name)</h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Description)</th>
                                <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                                <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                                <th>@Html.DisplayNameFor(model => model.Archived)</th>
                                <th>Members</th>
                                <th>Project Manager</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => project.Name)</td>
                                    <td>@Html.DisplayFor(model => project.Description)</td>
                                    <td>@Html.DisplayFor(model => project.StartDate)</td>
                                    <td>@Html.DisplayFor(model => project.EndDate)</td>
                                    <td>@Html.DisplayFor(model => project.Archived)</td>
                                    @foreach (var member in project.Members)
                                    {
                                        <td>@member.FullName</td>
                                    }
                                    <td>Project McManager</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-controller="Home" asp-action="Dashboard">Return to Dashboard</a>
</div>
